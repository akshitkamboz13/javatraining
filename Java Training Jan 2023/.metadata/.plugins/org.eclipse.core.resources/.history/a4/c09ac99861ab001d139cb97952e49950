package Java.Training.OOPS.a_jan;

public class Training22_ThisPointer
{
    public static void main(String[] args)
    {
        int num =5;
        Training22_ThisPointer obj = new Training22_ThisPointer();
        obj.fun(num);
        obj.show();
    }
    int a;
    void fun (int a)
    {
        this.a = a; // this pointer is used to differentiate between local and instance variable
                    //this pointer points to a current class element.
    }
    void show ()
    {
        System.out.println(a);
    }

}
