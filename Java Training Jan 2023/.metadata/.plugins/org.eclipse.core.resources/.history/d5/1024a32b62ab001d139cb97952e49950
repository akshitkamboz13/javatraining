package Java.Training.OOPS.feb2;

public class string_reverse
{
    String fun(String strr)
    {
        String s = "";
        /*
        aessai b theek hai
        for (int i = strr.length()-1; i>=0; i--)
        {
            s = s +strr.charAt(i);
        }
         */
        for (int i = 0; i< strr.length(); i++)
        {
            s = strr.charAt(i) + s;
        }

        return s;
    }
    public static void main(java.lang.String[] args)
    {
        java.lang.String str = "hello";
        string_reverse obj = new string_reverse();
        String ans = obj.fun(str);
        System.out.println(ans);
    }
}
