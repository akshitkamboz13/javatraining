        Scanner sc = new Scanner(System.in);
        int row = sc.nextInt();

        for (int i = 1; i<=row; i++)
        {
            for (int space =row-i; space>=1; space--)
            {
                System.out.print(" ");
            }
            for (int j=1; j<=i; j++)
            {
                System.out.print("*");
            }
