package Java.Training.OOPS.a_jan;

public class Training15_OOPS
{
    void fun () // void hamara return type hai
                // user defined funtion, is function ko call krna pdta h main function m, tabhi chalega.
                // function calling = control transfer
                // funtion ko call krne k liye object banan pdta h main function m.
                // obj banega class ka, call krega function ko
                // aghr main ki tarah static ho yeh function fir call kr skhte h seeda isko bina obj k, eg static void fun()
    {
        System.out.println("hello");
        sun(); // normal function k andr ham bina object k call krte h fir jis function ko call kr rhe h woh static ho ya normal
    }

    public static void main(String[] args)  // main b ek function h // main pehle chalega user defined function sai
    {
        System.out.println("hi");
        Training15_OOPS obj = new Training15_OOPS();
        obj.fun(); // function calling
        System.out.println("beech m aayegi yeh line fun aur fun k");
        obj.fun();
        obj.sun();
    }

    void sun () // fun ham main k baad b bana sakhte hai
    {
        System.out.println("bye");
    }
}
